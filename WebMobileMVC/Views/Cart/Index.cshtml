
@{
    Layout = "_Layout";
}

<!-- Start Page Title -->
<div class="page-title">
    <div class="container">
        <div class="column">
            <h1>Giỏ hàng</h1>
        </div>
        <div class="column">
            <ul class="breadcrumbs">
                <li><a href="index-1.html">Trang chủ</a></li>
                <li class="separator">&nbsp;</li>
                <li>Giỏ hàng</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Title -->
<!-- Start Cart Content -->
<div class="container padding-top-1x padding-bottom-3x">
    <!-- Start Shopping Cart -->
    <div class="table-responsive shopping-cart">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th class="text-center">Số lượng</th>
                    <th class="text-center">Đơn giá</th>
                    <th class="text-center">Gía khuyến mãi</th>
                    <th class="text-center">Tổng</th>
                    <th class="text-center">
                        <a class="btn btn-sm btn-outline-danger" href="https://localhost:5001/cart/del">Xoá tất cả</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (CartViewModel i in Model)
                {
                    <tr>
                        <td>
                            <div class="product-item">
                                <a class="product-thumb" href="https://localhost:5001/product/detail/@i.ID">
                                    <img src=@i.Hinh alt="Product">
                                </a>
                                <div class="product-info">
                                    <h4 class="product-title"><a href="https://localhost:5001/product/detail/@i.ID">@i.Ten</a></h4>
                                    <span><em>Màu:</em> @i.Mau</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="count-input">
                                <input id="soluong" type="number" step="1" min="1" max="" name="quantity" value="@i.SoLuong" title="Qty" class="input-text qty text" size="4" pattern="[0-9]*" inputmode="numeric" style="width: 60px">
                            </div>
                        </td>

                        <td class="text-center text-lg text-medium">@i.GiaBan đ</td>

                        <td class="text-center text-lg text-medium">@i.GiaKM đ</td>

                        @if (i.GiaKM != 0)
                        {
                            @*soluong = document.getElementById("soluong").value;*@
                            var gia = i.GiaKM * 1;
                            <td class="text-center text-lg text-medium">@gia đ</td>
                        }
                        else
                        {
                            var gia = i.GiaBan * 1;
                            <td class="text-center text-lg text-medium">@gia đ</td>
                        }
                        <td class="text-center">
                            <a class="remove-from-cart" href="https://localhost:5001/cart/del/@i.ID" data-toggle="tooltip" title="Remove item"><i class="icon-cross"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="shopping-cart-footer">
        <div class="column">
            <form class="coupon-form" method="post">
                <input class="form-control form-control-sm" type="text" placeholder="Mã giảm giá" required>
                <button class="btn btn-outline-primary btn-sm" type="submit">Áp dụng</button>
            </form>
        </div>
        <div class="column text-lg">Thành tiền: <span class="text-medium">$1899</span></div>
    </div>
    <div class="shopping-cart-footer">
        <div class="column">
            <a class="btn btn-outline-secondary" href="https://localhost:5001/"><i class="icon-arrow-left"></i>&nbsp;Tiếp tục mua hàng</a>
        </div>
        <div class="column">
            <a class="btn btn-primary" href="#" data-toast data-toast-type="success" data-toast-position="topRight" data-toast-icon="icon-circle-check" data-toast-title="Your cart" data-toast-message="is updated successfully!">Cập nhật</a>
            @if(Model.Count > 0){<a class="btn btn-success" href="https://localhost:5001/checkout/">Thanh toán</a>}
            else{<button class="btn btn-success" href="https://localhost:5001/checkout/" disabled>Thanh toán</button>}
        </div>
    </div>
    <!-- End Shopping Cart -->
</div>
<!-- End Cart Content -->